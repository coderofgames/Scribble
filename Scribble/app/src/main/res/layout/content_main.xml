<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"


    tools:context="com.discretegames.dave.scribble.MainActivity"
    tools:showIn="@layout/activity_main">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >
    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:text = "recognize"
        android:id = "@+id/button1"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:onClick="button1_click"
        android:visibility="visible"
        ></Button>
        <Button xmlns:android="http://schemas.android.com/apk/res/android"
            android:text = "clear"
            android:id = "@+id/button2"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:onClick="button2_click"
            android:visibility="visible"
            ></Button>
        <Button xmlns:android="http://schemas.android.com/apk/res/android"
            android:text = "train"
            android:id = "@+id/button3"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:onClick="button3_click"
            android:visibility="visible"
            ></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        >
        <com.discretegames.dave.scribble.DrawView android:id = "@+id/drawView1"  android:layout_width="wrap_content" android:layout_height="wrap_content" ></com.discretegames.dave.scribble.DrawView>
    </LinearLayout>
</LinearLayout>
